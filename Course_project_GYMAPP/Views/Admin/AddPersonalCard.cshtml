@model Course_project_GYMAPP.Domain.ViewModels.PersonalCardViewModel

<form asp-controller="Admin" asp-action="AddPersonalCard" id="createForm">
    <div class="form-group">
        <input asp-for="Name" class="form-control textbox-dg font-weight-bold text-center mb-3" placeholder="Ім'я" type="text" required>
    </div>
    <div class="form-group">
        <input asp-for="Duration" class="form-control textbox-dg font-weight-bold text-center mb-3" placeholder="Термін тривалості(у днях)" type="number" required>
    </div>
    <div class="form-group">
        <input asp-for="Price" class="form-control textbox-dg font-weight-bold text-center mb-3" placeholder="Вартість" type="number" required>
    </div>
    <button class="btn btn-success btn-lg float-md-none mb-3" type="submit">Додати</button>
</form>
