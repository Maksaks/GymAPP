@model Course_project_GYMAPP.Domain.ViewModels.AdminEditPersonalCardViewModel


<form method="post" asp-controller="Admin" asp-action="EditUser">
    <input asp-for="ID" hidden/>
    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact" class="text-danger text-center"></div>
    <div class="form-group">
        <input asp-for="Name" class="form-control textbox-dg font-weight-bold text-center mb-3" placeholder="Ім'я" type="text">
    </div>
    <div class="form-group">
        <input asp-for="Duration" class="form-control textbox-dg font-weight-bold text-center mb-3" placeholder="Термін дії клубної картки у днях" type="text">
    </div>
    <div class="form-group">
        <input asp-for="Price" class="form-control textbox-dg font-weight-bold text-center mb-3" placeholder="Вартість" type="number">
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Зберегти зміни</button>
    </div>
</form>