<script type="text/javascript">
    function showData(act, dest){
        const action = act;
        const destination = dest;
        
        if (action == undefined || destination == undefined) {
            alert("ERROR");
            return;
        }

        $.ajax({
            type: 'POST',
            url: action,
            success: function (response){
                $('#' + destination).html(response);
            }
        })
    }
</script>