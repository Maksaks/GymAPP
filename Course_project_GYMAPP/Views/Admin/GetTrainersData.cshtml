@model IEnumerable<Course_project_GYMAPP.Domain.Entity.Trainer>

<div class="row p-2">
    <div class="col-sm-2">
        <button onclick="showModal('../Admin/AddTrainer', 0)" type="submit" class="btn btn-outline-secondary" id="input-group-button-right">Новий трейнер</button>
    </div>
    <div class="col-sm-7">
        <div class="input-group">
            <input name="name" id="searchLineTrainer" type="text" class="form-control" placeholder="Пошук тренера за ім'ям" aria-label="Username" aria-describedby="input-group-button-right">
        </div>
    </div>
</div>
<div class="tableBodyScroll" id="trainerTable">
<table class="table table-hover">
<thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Ім'я</th>
        <th scope="col">Вік</th>
        <th scope="col">Номер</th>
        <th scope="col" class="w-100 text-wrap">Детальна інформація</th>
        <th scope="col">Зображення</th>
        <th scope="col"> </th>
        <th scope="col"> </th>
    </tr>
</thead>
<tbody>
        @foreach (var user in Model)
        {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.Name</td>
                    <td>@user.Age</td>
                    <td>@user.Number</td>
                    <td>@user.AboutInfo</td>
                    <td>@user.ImgPath</td>
                    <td><button type="submit" class="btn btn-outline-secondary" id="input-group-button-right" onclick="showModal('../Admin/GetTrainer', @user.Id)">Редагувати</button></td>
                    <td>
                        <form method="post" asp-controller="Admin" asp-action="DeleteTrainer" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-outline-secondary" id="input-group-button-right">Видалити</button>
                            </form>
                    </td>
                </tr>
        }

</tbody>
</table>
</div>

<script>
    document.getElementById("searchLineTrainer").oninput = function () {
        Search('../Admin/SearchTrainer', this.value, '#trainerTable');
    }
</script>