@model Course_project_GYMAPP.Domain.ViewModels.NewCardViewModel

<form method="post" asp-controller="Trainer" asp-action="NewCard" id="editForm">
    <div class="form-group">
        <input asp-for="Id" class="form-control textbox-dg font-weight-bold text-center mb-3" placeholder="Номер клубної картки" type="text">
    </div>
    <div class="form-group">
        <input asp-for="Name" class="form-control textbox-dg font-weight-bold text-center mb-3" placeholder="Ім'я клієнта" type="text">
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Оформити картку</button>
    </div>
</form>